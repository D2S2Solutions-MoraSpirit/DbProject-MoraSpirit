{% block styleCodeBlocks %}
    #top_row{
    max-width: 1250px;
    padding-left: 50px;
    padding-top: 80px;
    }
    a.mdl-button--colored {
    font-family: topheader;
    font-weight: bold;
    }
    .header-edit {
    margin-top: -9px;
    position: fixed;
    }
    .demo-card-wide.mdl-card {
    width: 350px;
    margin-bottom: 20px;
    margin-left: 20px;
    float: left;
    }
    .demo-card-wide > .mdl-card__title {
    color: #fff;
    height: 76px;

    }
{% endblock %}
