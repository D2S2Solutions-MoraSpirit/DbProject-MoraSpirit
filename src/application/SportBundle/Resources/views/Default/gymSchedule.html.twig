{% block midPanel %}
<div id="tagged">
    <table id="gymTable" class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
        <thead class="mdl-data-table">
        <tr id="theader">
            <th class="mdl-data-table__cell--non-numeric ">Location</th>
            <th>Sport</th>
            <th>From</th>
            <th>To</th>
        </tr>
        </thead>
        <tbody>
        {% for x in response_array %}
            <tr><td align="center">{{ x.getSportId() }}</td>
