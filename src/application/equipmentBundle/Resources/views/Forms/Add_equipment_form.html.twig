{% extends 'applicationMainBundle:Default:maintemplate.html.twig' %}


{% block title %}
    Add Equipment
{% endblock %}
{%  block midPanel %}
    <div class="container">
        <h1>Add New Equipment</h1>
        <form action="/add" method ="post" >

            <div class="form-group">
                <input type="text" required="required" name="supplierId" >
                <label for="supplierId" class="control-label">Supplier ID</label><i class="bar"></i>
            </div>

            <div class="form-group">
            <select name="equipmentName" id ="equipmentName">

                <% {% for x in s %}

                <option  value="{{  x.getEquipmentName() }}">{{ x.getEquipmentName() }}</option>

                {% endfor %}%>

            </select>
                <label for="equipmentName" class="control-label">equipment Name</label><i class="bar"></i>
                </div>
            <div class="form-group">
                <input type="number" name="quantity" min="1" max="1000" required="required">
                <label for="quantity" class="control-label">Quantity</label><i class="bar"></i>
            </div>

            <div class="form-group">
                <input type="date" name="date" required="required" class="datepicker">
                <label for="date" class="control-label">Date</label><i class="bar"></i>
            </div>

            <button type="submit" class="button"><span>Submit</span></button>

        </form>

    </div>


{% endblock %}